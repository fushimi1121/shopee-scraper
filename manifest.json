{
  "manifest_version": 3,
  "name": "Shopee Data Tracker",
  "version": "3.0",
  "description": "Shopee\u306e\u5546\u54c1\u30c7\u30fc\u30bf\u3092\u81ea\u52d5\u8ffd\u8de1\u3057\u3066Firestore\u306b\u4fdd\u5b58",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://shopee.sg/*",
    "*://shopee.com.sg/*",
    "https://firestore.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://shopee.sg/*",
        "*://shopee.com.sg/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "loading.gif"
      ],
      "matches": [
        "*://shopee.sg/*",
        "*://shopee.com.sg/*"
      ]
    }
  ]
}